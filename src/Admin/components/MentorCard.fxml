<!-- MentorCard.fxml -->
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<HBox fx:id="mentorCard" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Admin.components.MentorCard">

    <ImageView fx:id="mentorImage" fitWidth="100" preserveRatio="true"/>

    <VBox fx:id="detailsBox" spacing="5">
        <Label fx:id="nameLabel"/>
        <Label fx:id="professionLabel"/>
        <Label fx:id="ratingLabel"/>
        <Label fx:id="bioLabel"/>
    </VBox>

</HBox>
